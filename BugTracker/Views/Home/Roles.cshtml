

@using BugTracker.Models;
@model BugTracker.Models.ApplicationUser


<section id="main-content">
    <section class="wrapper site-min-height">
        <h3><i class="fa fa-angle-right"></i> Assign a role to <i>@Model.FullName</i></h3>
        <div class="row mt">
            <div class="col-lg-12">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.DropDownList("changeRoles", null, htmlAttributes: new { style = "width:200px;height:40px;" })
                    <br /><br />
                    <button class="btn btn-info" type="submit" style="margin: 0px 0px 0px 0px"><i class="glyphicon glyphicon-refresh"></i> Update</button>
                }
            </div>
        </div>

    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->


