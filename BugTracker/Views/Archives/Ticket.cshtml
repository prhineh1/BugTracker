@model BugTracker.Models.Ticket


<section id="main-content">
    <section class="wrapper site-min-height">
        <h3><i class="fa fa-angle-right"></i> Archive: @Model.Title details</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="col-md-4 col-md-offset-4 bg-theme03" style="border:1px solid black; padding-top: 15px; color:white;">
                    Created: @Model.Created.DateTime
                    <hr />
                    Submitter: @Model.OwnerUser.FullName
                    <hr />
                    @if (Model.AssignedToUser != null)
                    {
                        <text>Last assigned to: @Model.AssignedToUser.FullName</text>
                        <hr />
                    }
                    @Model.Description
                    <hr />
                    Type: @Model.TicketType.Name
                    <br />
                    Priority: @Model.TicketPriority.Name
                    <br />
                    Status: @Model.TicketStatus.Name
                    <hr />
                    @if (Model.TicketAttachments.Count > 0)
                    {
                        <h4 style="text-align:center">Attachments</h4>
                        <br />
                        foreach(var attachment in Model.TicketAttachments)
                        {
                            @attachment.Description
                            <br />
                            @attachment.Created.DateTime
                            <br />
                            <a href="@attachment.MediaUrl" style="color:yellow" target="_blank">View Attachment</a>
                            <text>or</text>
                            <a href="@attachment.MediaUrl" style="color:yellow" download>download</a>
                            <hr />
                        }
                    }
                </div>
            </div>
        </div>

    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->
